<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="#FF9800"
    tools:context=".SecondActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:paddingHorizontal="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:visibility="gone"
                    android:text="Name"
                    android:id="@+id/nametext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/LightBox"
                    android:drawablePadding="6dp"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorLink="@color/black"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap" />

                <TextView
                    android:id="@+id/fName"
                    android:text="Name"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/LightBox"
                    android:drawablePadding="6dp"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorLink="@color/black"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap" />

                <ImageView
                    android:id="@+id/pimage"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="-197dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_profile_logo"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_below="@id/appbar"
                android:layout_marginTop="150dp"
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardFirst"
                    android:layout_width="150dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="25dp"
                    android:backgroundTint="#FFC107"
                    app:cardElevation="20dp">

                    <ImageView
                        android:src="@drawable/nn"
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_toLeftOf="@id/cardFirst"
                    android:id="@+id/cardSecond"
                    android:layout_width="150dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="25dp"
                    android:backgroundTint="#FFC107"
                    app:cardElevation="20dp">

                    <ImageView
                        android:src="@drawable/pop"
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:id="@+id/mains"
                android:layout_below="@id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardThird"
                    android:layout_width="150dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="25dp"
                    android:backgroundTint="#FFC107"
                    app:cardElevation="20dp">

                    <ImageView
                        android:src="@drawable/aispin"
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardFourth"
                    android:layout_width="150dp"
                    android:layout_height="125dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="25dp"
                    android:backgroundTint="#FFC107"
                    app:cardElevation="20dp">

                    <ImageView
                        android:src="@drawable/spin"
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>

